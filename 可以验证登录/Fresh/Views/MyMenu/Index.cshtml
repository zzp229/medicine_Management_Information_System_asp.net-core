                    <div class="col-sm">
                        <input class="form-control" placeholder="请输入编号" id="ano">
                    </div>
                    <div class="col-sm">
                        <input class="form-control" placeholder="请输入姓名" id="aname">
                    </div>
                    <div class="col-sm">
