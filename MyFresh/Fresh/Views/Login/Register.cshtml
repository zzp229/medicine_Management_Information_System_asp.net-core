@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>注册</title><!-- Favicon -->
    <link rel="stylesheet" href="/static/css/backend-plugin.min.css">
    <link rel="stylesheet" href="/static/css/backend.css">
    <link rel="stylesheet" href="/static/css/all.min.css">
    <link rel="stylesheet" href="/static/css/line-awesome.min.css">
    <link rel="stylesheet" href="/static/css/remixicon.css">
    <link rel="stylesheet" href="/static/css/dripicons.css">
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/css/main1.css">
    <link rel="stylesheet" href="/static/css/main2.css">
    <link rel="stylesheet" href="/static/css/main3.css">
    <link rel="stylesheet" href="/static/css/mapbox-gl.css">
    <style>
        .dark {
            background: initial;
        }

        html, body {
            background-image: url("/static/image/Starry.jpg");
        }

        .card {
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <!-- loader Start -->
    <div id="loading">
        <div id="loading-center"></div>
    </div><!-- loader END -->
    <div class="wrapper">
        <section class="login-content">
            <div class="container h-100">
                <div class="row align-items-center justify-content-center h-100">
                    <div class="col-md-5">
                        <div class="card">
                            <div class="card-body">
                                <div class="auth-logo">
                                    <img src="/static/picture/logo.png"
                                         class="img-fluid rounded-normal" alt="logo">
                                </div>
                                <h2 class="mb-2 text-center">注册</h2>
                                <p class="text-center">输入您的个人信息，与我们一起开始旅程。</p>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>用户名</label><input class="form-control" id="name"
                                                                     type="text" placeholder=" ">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>昵称</label><input class="form-control" id="nickName"
                                                                    type="text" placeholder=" ">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>密码</label><input class="form-control" id="password"
                                                                    type="password" placeholder=" ">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>确认密码</label><input class="form-control" id="confirmPassword" type="password" placeholder=" ">
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>
                                        已经有一个账户 <a href="/Login/Index" class="text-primary">登录</a>
                                    </span><button class="btn btn-primary" onclick="CreateUser()">
                                        提交
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div><!-- Backend Bundle JavaScript -->
    <script src="/static/js/backend-bundle.min.js"></script><!-- Flextree Javascript-->
    <script src="/static/js/flex-tree.min.js"></script>
    <script src="/static/js/tree.js"></script><!-- Table Treeview JavaScript -->
    <script src="/static/js/table-treeview.js"></script><!-- Masonary Gallery Javascript -->
    <script src="/static/js/masonry.pkgd.min.js"></script>
    <script src="/static/js/imagesloaded.pkgd.min.js"></script><!-- Mapbox Javascript -->
    <script src="/static/js/mapbox-gl.js"></script>
    <script src="/static/js/mapbox.js"></script><!-- Fullcalender Javascript -->
    <script src="/static/js/sweetalert.js"></script><!-- Vectoe Map JavaScript -->
    <!-- Chart Custom JavaScript -->
    <script src="/static/js/customizer.js"></script><!-- Chart Custom JavaScript -->
    <script src="/static/js/chart-custom.js"></script>
    <script src="/static/js/01.js"></script>
    <script src="/static/js/02.js"></script><!-- slider JavaScript -->
    <script src="/static/js/slider.js"></script><!-- Emoji picker -->
    <script src="/static/js/app.js"></script>
    <script>
        function CreateUser() {
            var name = $("#name").val();
            var nickName = $("#nickName").val();
            var password = $("#password").val();
            var confirmPassword = $("#confirmPassword").val();
            if (name == "" || nickName == "" || password == "" || confirmPassword == "") {
                alert("参数不可以为空！");
            } else if (password != confirmPassword) {
                alert("两次输入的密码不一致！");
            } else {
                $.post("/Login/CreateUser", { name: name, nickName: nickName, password: password, confirmPassword: confirmPassword }, function (data) {
                    if (data.IsSuccess) {
                        window.location.href = "/";
                    } else {
                        alert(data.Msg);
                    }
                });
            }
        }
    </script>
</body>